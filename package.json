{
  "name": "boilerplate-fullstack-query",
  "type": "module",
  "version": "2.0.0",
  "main": "server/index.js",
  "license": "MIT",
  "keywords": [
    "fullstack"
  ],
  "homepage": "https://xavier-kirkpatrick.github.io",

  "scripts": {
    "start": "node dist/server.js",
    "dev": "run-p dev:server dev:client dev:css",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "dev:css": "tailwindcss -i src/styles/main.css -o public/main.css --watch",
    "knex": "knex --knexfile server/db/knexfile.js",
    "db-reset": "run-s db:*",
    "db:delete": "rm server/db/dev.sqlite3",
    "db:migrate": "npm run knex migrate:latest",
    "db:seed": "npm run knex seed:run",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",
    "test": "vitest",
    "deploy": "gh-pages -d dist",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "@million/lint": "^1.0.0-rc.20",
    "@tanstack/react-router": "^1.35.1",
    "@tanstack/router-cli": "^1.30.0",
    "express": "^4.17.2",
    "framer-motion": "^11.2.10",
    "knex": "^2.5.1",
    "react-icons": "^5.2.0",
    "sqlite3": "^5.1.6",
    "superagent": "7.1.1"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.9.1",
    "@redux-devtools/extension": "^3.2.3",
    "@tanstack/eslint-plugin-query": "^4.29.9",
    "@tanstack/react-query": "^4.29.12",
    "@tanstack/react-query-devtools": "^4.29.12",
    "@tanstack/router-devtools": "^1.31.28",
    "@tanstack/router-vite-plugin": "^1.31.18",
    "@testing-library/react": "^14.0.0",
    "@types/express": "^4.17.14",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/superagent": "^4.1.18",
    "@types/supertest": "^2.0.12",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-c8": "^0.30.1",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.18.19",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^6.1.1",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2",
    "sass": "^1.50.1",
    "supertest": "^6.2.2",
    "tailwindcss": "^3.4.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead"
}
